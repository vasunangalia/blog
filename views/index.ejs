<% include ./partials/header %>

<div class=" ui main text container">
    <div class="ui huge header ">Town Center</div>
    <div class="ui top attached segment">
    <div class="ui divided items">
        <% blogs.forEach(function(blog){ %>
        <div class="item">
            <div class="image">
                <img src="<%= blog.image %>">
            </div>
            <div class="content">
                <a class="header" href="/blogs/<%= blog._id %>"><%= blog.title%></a>
                <div class="meta">
                    <span><%= blog.created.toDateString() %></span>
                </div>
                <div class="discription">
                     <p><%- blog.body.substring(0, 100) %>....</p>
                </div>
                <div>
                    <a class="ui floated inverted green button" href="/blogs/<%= blog._id %>">
                        Read more
                        <i class="right chevron icon"></i>
                    </a>
                </div>
           <!--     <div>
                    <a class="ui floated inverted green button" href="<%= blog.url %>">
                        View
                        <i class="right chevron icon"></i>
                    </a>
                </div> -->
            </div>
        </div>
                <% }) %>
    </div>
    </div>
    
</div>

<% include ./partials/footer %>